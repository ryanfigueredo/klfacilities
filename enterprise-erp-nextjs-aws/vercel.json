{
  "framework": "nextjs",
  "regions": ["gru1"],
  "installCommand": "npm install --no-audit --progress=false --legacy-peer-deps",
  "buildCommand": "npm run build",
  "functions": {
    "src/app/api/checklists-operacionais/respostas/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/checklists-operacionais/escopos/[id]/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/checklists-operacionais/options/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/whatsapp/monitor",
      "schedule": "*/5 * * * *"
    }
  ]
}
